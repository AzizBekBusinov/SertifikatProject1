extends layout
block content
    include navbar
    .container
        h1.title= title
        if data 
        form(method="post" enctype= 'multipart/form-data').mb-5 
            .mb-3
                label.form-label(for='exampleInputEmail1') nomi
                    span.shart  *
                input.form-control#exampleInputEmail1.toldir(name="title" type='text' value= data.title)
            .mb-3
                label.form-label(for='exampleInputEmail1') narxi 
                    span.shart  *
                input.form-control#exampleInputEmail1.toldir(name="price" type='text' value= data.price)
            .mb-3
                label.form-label(for='exampleInputEmail1') mahsulot rasmi 
                    span.shart  *
                input.form-control#exampleInputEmail1.toldir(name="img" type='file' multiple)
            .mb-3
                label.form-label(for='exampleInputEmail1') chegirmasi bormi ?
                    span.savol  (agar bor bo'lsa sonda kiriting ...)
                input.form-control#exampleInputEmail1(name="sale" type='text' value= data.sale)
            .mb-3
                label.form-label(for='exampleInputEmail1') muddatli to'lovgami ?
                    span.savol  (agar muddatli bo'lsa necha oyga (sonda) kiriting ...)
                input.form-control#exampleInputEmail1(name="lifetime" type='text' value= data.lifetime)
            .mb-3
                label.form-label(for='exampleInputEmail1') kategoriyasi
                    span.shart  *
                select(name="category").form-control 
                    option(value="mashina") Mashina
                    option(value="telefon") Telefon
                    option(value="uy_joy") Uy joy
                    option(value="bolalar_uchun") Bolalar uchun
                    option(value="kiyim_kechak") Kiyim kechak
